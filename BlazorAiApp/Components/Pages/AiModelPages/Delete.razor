@page "/aimodels/delete"
@inject BlazorAiApp.Data.ApplicationDbContext DB
@using BlazorAiApp.Data
@inject NavigationManager NavigationManager
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>AiModel</h4>
    <hr />
    @if (aimodel is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@aimodel.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ModelRepo</dt>
            <dd class="col-sm-10">@aimodel.ModelRepo</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@aimodel.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Author</dt>
            <dd class="col-sm-10">@aimodel.Author</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ChatHistory</dt>
            <dd class="col-sm-10">@aimodel.ChatHistory</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">ChatHistory_List</dt>
            <dd class="col-sm-10">@aimodel.ChatHistory_List</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreateDate</dt>
            <dd class="col-sm-10">@aimodel.CreateDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Number</dt>
            <dd class="col-sm-10">@aimodel.Number</dd>
        </dl>
        <EditForm method="post" Model="aimodel" OnValidSubmit="DeleteAiModel" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(aimodel is null)">Delete</button> |
            <a href="/aimodels">Back to List</a>
        </EditForm>
    }
</div>


